{
  "compilerOptions": {
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES6",
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "incremental": true,
    "rootDir": "./src",
    "outDir": "dist",
    "declarationDir": "dist/declarations"
  },
  "exclude": [
    "node_modules",
    "**/__tests__/*.ts",
    "dist"
  ]
}