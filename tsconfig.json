{
  "compilerOptions": {
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2015",
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "**/__tests__/*.ts"
  ]
}
